<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8f8f8"
    tools:context=".ActivityPrincipal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#FFFFFF"
                    app:cardCornerRadius="100dp">

                    <ImageView
                        android:id="@+id/Foto"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_perfil_24" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_tomar_foto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="5dp"
                        android:backgroundTint="#E91E63"
                        android:text="Tomar Foto"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/btn_seleccionar_foto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:backgroundTint="#E91E63"
                        android:text="Subir Foto"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Grabar descripción de perfil"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btn_grabar"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/ic_microfono_24"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageView
                    android:id="@+id/btn_reproducir"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/ic_reproducir_24"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Latitud"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/txt_latitud"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/editext"
                        android:ems="10"
                        android:enabled="false"
                        android:hint="Latitud Actual"
                        android:inputType="textPersonName"
                        android:paddingStart="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="#747474"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Longitud"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/txt_longitud"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/editext"
                        android:ems="10"
                        android:enabled="false"
                        android:hint="Longitud Actual"
                        android:inputType="textPersonName"
                        android:paddingStart="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="#747474"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text="La ubicacion se obtiene automaticamente, procure mantener activa su ubicacion en su telefono"
                        android:textColor="#000000"
                        android:textSize="8sp" />

                    <ImageView
                        android:id="@+id/btn_ubicacion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/ic_ubicacion_24" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Descripcion de Ubicación"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/txt_descripcion"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/editext"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Dirección Actual"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="#747474"
                android:textSize="14sp"
                tools:gravity="center_vertical" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Telefono"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/txt_telefono"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/editext"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="Número de Teléfono"
                android:inputType="number"
                android:maxLength="8"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="#747474"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_guardar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#2196F3"
                android:text="Guardar"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_lista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FFC107"
                android:text="Contactos Guardados"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>